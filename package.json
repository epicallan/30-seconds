{
  "name": "30-seconds",
  "version": "1.0.0",
  "description": "for creating 30 seconds cards",
  "main": "index.js",
  "private": true,
  "scripts": {
    "dev": "npm run prebuild && concurrently \"tsc --pretty --watch\" \"next dist\"",
    "prebuild": "rm -rf dist && mkdir -p dist && cp -R node_modules/@devinit/pdf-base/lib/static/ dist/static && cp next.config.js dist && tsc",
    "api": "tsc && node dist/api/index.js",
    "test": "jest",
    "build": "next build dist",
    "export": "next export dist",
    "start": "next start dist -p 7777",
    "lint": "tslint -c tslint.json 'pages/**/*.tsx' 'src/**/*.tsx' 'src/**/*.ts'"
  },
  "keywords": [
    "pdfs", "30 seconds", "board game"
  ],
  "author": "epicallan.al@gmail.com",
  "license": "ISC",
  "dependencies": {
    "@devinit/pdf-base": "1.0.17",
    "fast-csv": "2.4.1",
    "glamor": "2.20.40",
    "glamorous": "4.11.4",
    "next": "latest",
    "prettier": "1.10.2",
    "ramda": "0.25.0",
    "react": "16.2.0",
    "react-dom": "16.2.0"
  },
  "devDependencies": {
    "@types/jest": "22.1.0",
    "@types/next": "2.4.7",
    "@types/node": "9.3.0",
    "@types/ramda": "0.25.16",
    "@types/react": "16.8.2",
    "concurrently": "3.5.1",
    "git-pre-hooks": "1.2.0",
    "jest": "22.1.4",
    "jest-cli": "22.1.4",
    "pretty-format": "22.1.0",
    "ts-jest": "22.0.2",
    "tslint": "5.9.1",
    "tslint-react": "3.4.0",
    "typescript": "2.6.2"
  },
  "git-pre-hooks": {
    "pre-commit": [
      "npm run lint",
      "npm run build"
    ]
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "mapCoverage": true,
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "testEnvironment": "node",
    "testRegex": ".*\\.test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  }
}
